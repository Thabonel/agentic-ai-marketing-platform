# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# Marketing Platform API Keys
SENDGRID_API_KEY=your-sendgrid-api-key-here
LINKEDIN_API_KEY=your-linkedin-api-key-here
FACEBOOK_API_KEY=your-facebook-api-key-here
GOOGLE_ADS_API_KEY=your-google-ads-api-key-here
TWITTER_API_KEY=your-twitter-api-key-here

# Additional Configuration
ENVIRONMENT=production
LOG_LEVEL=INFO
# Social Media Agent credentials
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token
LINKEDIN_PERSON_ID=your-linkedin-person-id
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_PAGE_ID=your-facebook-page-id
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_USER_ID=your-instagram-user-id

# Email Automation Agent settings
EMAIL_SERVICE=sendgrid
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your Company Name

# Content Creation Agent settings
MIN_SEO_SCORE=70
MIN_READABILITY_SCORE=75
DEFAULT_CONTENT_TONE=professional
